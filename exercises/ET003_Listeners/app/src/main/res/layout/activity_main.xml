<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/a_main_layout"
    tools:context="com.example.android.et003_listeners.MainActivity">

    <TextView
        android:id="@+id/a_main_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <EditText
        android:id="@+id/a_main_et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/a_main_btn1"
        android:onClick="doMagic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/a_main_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/a_main_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/a_main_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/a_main_cb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show name"
        />

    <CheckBox
        android:id="@+id/a_main_cb_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set blue background"/>

</LinearLayout>
