<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.et005_fragments.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:tag="PINK_FRAGMENT_1"
        android:name="com.example.android.et005_fragments.PinkFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:tag="BLUE_FRAGMENT"
        android:name="com.example.android.et005_fragments.BlueFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:tag="PINK_FRAGMENT_2"
        android:name="com.example.android.et005_fragments.PinkFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:tag="PINK_FRAGMENT_3"
        android:name="com.example.android.et005_fragments.PinkFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/a_main_btn"
        android:text="Second activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToSecondActivity"/>

</LinearLayout>
