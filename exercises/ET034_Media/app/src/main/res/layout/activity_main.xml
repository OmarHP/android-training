<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.et034_media.MainActivity">

    <Button
        android:id="@+id/a_main_media"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="mediaPlayer"
        android:text="Media Player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/a_main_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Video View"
        app:layout_constraintEnd_toEndOf="@+id/a_main_media"
        app:layout_constraintStart_toStartOf="@+id/a_main_media"
        app:layout_constraintTop_toBottomOf="@+id/a_main_media"
        android:onClick="videoView"/>

    <Button
        android:id="@+id/a_main_exo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="exoPlayer"
        android:text="Exo Player"
        app:layout_constraintEnd_toEndOf="@+id/a_main_video"
        app:layout_constraintStart_toStartOf="@+id/a_main_video"
        app:layout_constraintTop_toBottomOf="@+id/a_main_video" />
</android.support.constraint.ConstraintLayout>
