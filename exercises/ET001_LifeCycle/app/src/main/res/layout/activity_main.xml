<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.et001_lifecycle.MainActivity">

    <TextView
        android:id="@+id/a_main_tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_toRightOf="@id/a_main_tv_txt"
        android:layout_toEndOf="@id/a_main_tv_txt"
        >
    </FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_main_tv_txt"
        android:text="Click me!"
        android:onClick="doMagic"/>



</RelativeLayout>
