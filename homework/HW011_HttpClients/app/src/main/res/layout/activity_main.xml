<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.hw011_httpclients.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit with Jackson converter"
        android:onClick="doRetrofitAndJacksonMagic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OkHttp with Cache"
        android:onClick="doOkHttpMagic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Image with Volley"
        android:onClick="loadImageWithVolley"/>

    <ImageView
        android:id="@+id/a_main_iv_image"
        android:layout_width="200dp"
        android:layout_height="200dp" />


</LinearLayout>
