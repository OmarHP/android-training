<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hw001.DetailActivity">

    <TextView
        android:id="@+id/a_detail_tv_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/a_detail_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Omar Ham"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_tv_name_label"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/a_detail_tv_name_label" />

    <TextView
        android:id="@+id/a_detail_tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_tv_name"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/a_detail_tv_name" />

    <TextView
        android:id="@+id/a_detail_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+521 556 422 8565"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_tv_phone_label"
        app:layout_constraintLeft_toLeftOf="@+id/a_detail_tv_phone_label" />

    <TextView
        android:id="@+id/a_detail_tv_descr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_tv_phone"
        app:layout_constraintLeft_toLeftOf="@+id/a_detail_tv_phone" />

    <TextView
        android:id="@+id/a_detail_tv_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        tools:text="Some description"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/a_detail_tv_descr_label"
        app:layout_constraintLeft_toLeftOf="@+id/a_detail_tv_descr_label"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
